generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String        @id @unique @default(uuid())
  email        String        @unique
  firstName    String?
  lastName     String?
  password     String
  Purchases    Purchase[]
  Transactions Transaction[]
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
}

model Admin {
  id                String             @id @unique @default(uuid())
  email             String             @unique
  firstName         String?
  lastName          String?
  address           String
  password          String
  Courses           Course[]
  Balances          Balance?
  AdminTransactions AdminTransaction[]
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt
}

model Course {
  id            String        @id @unique @default(uuid())
  title         String
  description   String        @default("")
  imageURL      String
  price         String
  about         String        @default("")
  learning      String        @default("")
  courseInclude String        @default("")
  Purchases     Purchase[]
  Transactions  Transaction[]
  createrId     String
  creater       Admin         @relation(fields: [createrId], references: [id], onDelete: Cascade)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
}

model Purchase {
  id            String      @id @unique @default(uuid())
  transactionId String      @unique
  transaction   Transaction @relation(fields: [transactionId], references: [id], onDelete: Cascade)
  userId        String
  user          User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  courseId      String
  course        Course      @relation(fields: [courseId], references: [id], onDelete: Cascade)
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}

model Transaction {
  id              String    @id @unique @default(uuid())
  address         String
  amount          String
  signature       String
  purchasedCourse Purchase?
  courseId        String
  course          Course    @relation(fields: [courseId], references: [id], onDelete: Cascade)
  userId          String
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}

model Balance {
  id            String   @id @unique @default(uuid())
  pendingAmount Float
  lockedAmount  Float
  adminId       String   @unique
  admin         Admin    @relation(fields: [adminId], references: [id], onDelete: Cascade)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model AdminTransaction {
  id           String   @id @unique @default(uuid())
  transactionId String   @unique
  adminId      String
  admin        Admin    @relation(fields: [adminId], references: [id], onDelete: Cascade)
  amount       String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
